<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="gestion_formation.list">
      <field name="name">gestion_formation list</field>
      <field name="model">gestion_formation.formation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="price"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="gestion_formation.action_window">
      <field name="name">Liste des formations</field>
      <field name="res_model">gestion_formation.formation</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="gestion_formation.action_server">
      <field name="name">gestion_formation server</field>
      <field name="model_id" ref="model_gestion_formation_formation"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
   

    <!-- Top menu item -->
    
    <menuitem name="Gestion des formations" id="gestion_formation.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Formations" id="gestion_formation.menu_1" parent="gestion_formation.menu_root"/>
    <menuitem name="Salles" id="gestion_formation.menu_2" parent="gestion_formation.menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="Liste des formations" id="gestion_formation.menu_1_list" parent="gestion_formation.menu_1"
              action="gestion_formation.action_window"/>
    <menuitem name="Server to list" id="gestion_formation" parent="gestion_formation.menu_2"
              action="gestion_formation.action_server"/>
   
  </data>
</odoo>